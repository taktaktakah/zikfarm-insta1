<div class="container">
  
  <h1>My Page</h1>
  
 <% if user_signed_in? %>
   <%= link_to("New", new_post_path) %>
 <% end %>
  
  <div class="row">
    <% @posts.each do |post| %>
  
      <div class="col-4">
        <%= link_to(post) do %>
       
          <% post.content %>
      
        <% end %>
      </div>
    
    <% end %>
  </div>
  
</div>


  
